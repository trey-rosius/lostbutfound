
<%= render "shared/errors", obj: @product%>
<div class= 'row'>
 <div class = 'col-xs-12'>
<%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f|%>
<div class="form-group">
 <div class="control-label col-sm-2">

<%= f.label :name %>
</div>
<div class ="col-sm-6">

<%= f.text_field :name, class: "form-control",placeholder: "Name Of Item",autofocus: true %>
</div>
</div>
<div class="form-group">
 <div class="control-label col-sm-2">

<%= f.label :owner_name %>
</div>
<div class ="col-sm-6">

<%= f.text_field :owner_name, class: "form-control",placeholder: "Owner Of Item",autofocus: true %>
</div>
</div>
<div class="form-group">
 <div class="control-label col-sm-2">

<%= f.label :location %>
</div>
<div class ="col-sm-6">

<%= f.text_field :location, class: "form-control",placeholder: "Location Of Item",autofocus: true %>
</div>
</div>
<div class="form-group">
 <div class="control-label col-sm-2">
<%= f.label :details %>
</div>
<div class="col-sm-6">
<%= f.text_area :details,rows:6,class: "form-control",placeholder:"Description of Item"%>
</div>
</div>

<div class="form-group">
<div class="col-sm-offset-2 col-sm-4">
<%= f.submit class: 'btn btn-primary btn-large'%>
</div>
</div>

<% end %>

</div>
</div>
<div class ="col-xs-offset-2">
[ <%= link_to "cancel request and return back to Items listing",products_path%> ]
</div>