<div class="container">
<%= render "shared/errors", obj: @user%>
<div class= 'row'>
 <div class = 'col-xs-12'>
<%= form_for(@user, url: create_user_path, :html => {class: "form-horizontal", role: "form"}) do |f|%>
<div class="form-group">
 <div class="control-label col-sm-2">

<%= f.label :first_name %>
</div>
<div class ="col-sm-6">

<%= f.text_field :first_name, class: "form-control",placeholder: "Enter First Name",autofocus: true %>
</div>
</div>
<div class="form-group">
 <div class="control-label col-sm-2">

<%= f.label :last_name %>
</div>
<div class ="col-sm-6">

<%= f.text_field :last_name, class: "form-control",placeholder: "Enter Last Name",autofocus: true %>
</div>
</div>

<div class="form-group">
 <div class="control-label col-sm-2">
<%= f.label :Email %>
</div>
<div class="col-sm-6">
<%= f.email_field :email,rows:6,class: "form-control",placeholder:"Enter Email"%>
</div>
</div>
 <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :phoneNumber%>
        </div>
          <div class="col-sm-6">
        <%= f.text_field :phoneNumber,  class: 'form-control',placeholder:"Enter User Phone Number" %>
       </div>
      </div>
<div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :address%>
        </div>
        <div class="col-sm-6">
        <%= f.text_field :address,rows:6,  class: 'form-control',placeholder:"Enter Agent Address" %>
     
      </div>
      </div>
<div class="form-group">
 <div class="control-label col-sm-2">
<%= f.label :Password %>
</div>
<div class="col-sm-6">
<%= f.password_field :password,rows:6,class: "form-control",placeholder:"Enter Password"%>
</div>
</div>  
<div class="form-group">
 <div class="control-label col-sm-2">
<%= f.label :"Agent Location"%>
</div>
<div class="col-sm-6">
<% options = options_from_collection_for_select(Location.all, 'id', 'name') %>
<%= f.select :location_id,  options %>
 
  </div>
</div>
<div class="form-group">
<div class="col-sm-offset-2 col-sm-4">
<%= f.submit "Sign Up",class: "btn btn-lg btn-success"%>
</div>
</div>

<% end %>
<div class ="col-xs-offset-2">
[ <%= link_to "cancel request and return back to articles listing",products_path%> ]
</div>
</div>
</div>
</div>