<div class="container">
<h1 align="center">Agent Locations</h1>
<div align="center">

<%= will_paginate%>

<% @locations.each do |location| %>
<ul class="listings">

<div class="well col-md-4 col-md-offset-1">
<li><%#= link_to gravatar_for(user), user_path(user) %></li>
<li class="article-title">
<%= link_to location.name, location_path(location) %>
</li>

<li><small><%= pluralize(location.users.count, "delivery point(s)") if location.users %></small></li>
<% if user_signed_in? and current_user.admin %>

<div class="article-actions">
<%#= link_to "Admin", '#', class: "btn btn-xs btn-default"%> 
<%= link_to "Edit Location",edit_location_path(location), class: "btn btn-xs btn-primary"%>
<%= link_to "Delete Location", location_path(location), method: :delete,
data:{confirm: "Are you sure you want to delete this Location?"}, class: "btn btn-xs btn-danger"%>
</div>

 <% end %>


</div>

</ul>
<% end %>
<%= will_paginate%>
</div>
</div>